{{#tasks}}
    <div id="t-{{id}}" class="relative border rounded border-black max-w-80 cursor-pointer">
        <div class="p-4" onclick='goToTask("{{id}}")'>{{name}}, {{tasks.status}}: {{status}}</div>
        <span class="absolute top-0 right-0 text-3xl p-2 cursor-pointer"
              hx-delete="/tasks/{{id}}"
              hx-confirm="{{name}}"
              hx-target="#t-{{id}}"
              hx-swap="delete">&times;
        </span>
    </div>
{{/tasks}}
{{^tasks}}
    <div>{{tasks.no-tasks}}</div>
{{/tasks}}