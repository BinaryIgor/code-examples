{{#tasks}}
    <div id="t-{{id}}" class="relative border rounded border-black max-w-80 cursor-pointer">
        <div class="p-8" onclick='goToTask("{{id}}")'>{{name}}, {{tasks.status}}: {{status}}</div>
    </div>
{{/tasks}}
{{^tasks}}
    <div>{{tasks.no-tasks}}</div>
{{/tasks}}

<script>
    function goToTask(id) {
        let url = "/tasks/" + id;
        const scrollPosition = document.documentElement.scrollTop;
        if (location.search) {
            const tasksSearch = btoa(location.search.substr(1));
            url = url + "?tasksSearch=" + tasksSearch;
        }

        sessionStorage.setItem("tasks-scroll", scrollPosition);

        location.href = url;
    }
</script>
